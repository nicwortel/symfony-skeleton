{
    "name": "nicwortel/symfony-skeleton",
    "type": "project",
    "description": "Skeleton for Symfony Flex applications",
    "license": "proprietary",
    "require": {
        "php": "^7.4",
        "symfony/console": "5.1.*",
        "symfony/dotenv": "5.1.*",
        "symfony/framework-bundle": "5.1.*",
        "symfony/monolog-bundle": "^3.5",
        "symfony/twig-bundle": "5.1.*",
        "symfony/yaml": "5.1.*"
    },
    "require-dev": {
        "behat/behat": "^3.7",
        "nicwortel/coding-standard": "^2.0",
        "phpmd/phpmd": "^2.8",
        "phpstan/phpstan": "^0.12.31",
        "phpstan/phpstan-symfony": "^0.12.6",
        "phpunit/phpunit": "^9.2",
        "sensiolabs/security-checker": "^6.0",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/flex": "^1.0",
        "symfony/profiler-pack": "^1.0"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "require": "5.1.*"
        }
    },
    "autoload": {
        "psr-4": {
            "Vendor\\Project\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vendor\\Project\\Tests\\Unit\\": "tests/unit/",
            "Vendor\\Project\\Tests\\Integration\\": "tests/integration/",
            "Vendor\\Project\\Tests\\Acceptance\\": "tests/acceptance/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "auto-scripts": {
            "./setup.sh": "script",
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "security-checker security:check": "script"
        }
    }
}
